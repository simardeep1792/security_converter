# DND Deployment Configuration Variables
# Script configuration for private autopilot GKE cluster

# GCP Configuration
PROJECT_ID="admds-edip-datasandbox"
REGION="northamerica-northeast1"
ZONE="northamerica-northeast1-a"

# Private Autopilot Cluster Configuration
CLUSTER_NAME="security-converter-autopilot"
VPC_NAME="security-converter-vpc"
SUBNET_NAME="security-converter-subnet"
ROUTER_NAME="security-converter-router"
NAT_NAME="security-converter-nat"

# Network Configuration
VPC_CIDR="10.0.0.0/20"
POD_RANGE="10.4.0.0/14"
SERVICE_RANGE="10.8.0.0/20"
MASTER_CIDR="172.16.0.0/28"

# Pod and Service Secondary Range Names
POD_RANGE_NAME="pods"
SERVICE_RANGE_NAME="services"

# NAT Configuration (true/false)
NAT_TOGGLE="true"

# Artifact Registry Configuration
REGISTRY_NAME="security-converter-repo"
IMAGE_NAME="security-converter"
IMAGE_TAG="latest"

# Kubernetes Configuration
NAMESPACE="security-converter"
POSTGRES_PVC_SIZE="10Gi"
POSTGRES_STORAGE_CLASS="standard-rwo"

# Application Configuration
API_REPLICAS="2"
POSTGRES_REPLICAS="1"

# Health Check Configuration
STARTUP_PROBE_FAILURE_THRESHOLD="30"
STARTUP_PROBE_PERIOD_SECONDS="10"
LIVENESS_PROBE_PERIOD_SECONDS="30"
READINESS_PROBE_PERIOD_SECONDS="10"

# Resource Configuration for Autopilot
API_CPU_REQUEST="100m"
API_MEMORY_REQUEST="256Mi"
API_CPU_LIMIT="500m"
API_MEMORY_LIMIT="512Mi"

POSTGRES_CPU_REQUEST="100m"
POSTGRES_MEMORY_REQUEST="256Mi"
POSTGRES_CPU_LIMIT="500m"
POSTGRES_MEMORY_LIMIT="1Gi"

# Authorized Networks (comma-separated CIDR blocks for cluster access)
AUTHORIZED_NETWORKS="10.0.0.0/20"